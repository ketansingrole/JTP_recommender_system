<style>
    .container {
        padding-top: 25vmin;
    }
    .row{
        padding: 10px;
    }

    .card{
       display: grid;
    grid-template-columns: 200px;
    grid-template-rows: 250px;
    grid-template-areas: "image" "text";
    font-family: robot;
    border-radius: 18px;
    background-color: white;
    box-shadow: 5px 5px 15px rgba(0,0,0,0.9);
    margin: inherit;
    transition: 0.5s ease;
    cursor: pointer;
    text-align: center;
    padding: 0%;
    }

    .card-image{
        grid-area: image;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        background-size:cover;
    }

    .card-text{
        display: grid;
        grid-area: text;
        align-content: center;
        margin: 25px;
        padding: 10px;
    }

    .card:hover{
        transform: scale(1.1);
        box-shadow: 5px 5px 15px rgba(0,0,0,0.6);
    }

    ul{
        display: inline-flex;
        margin: 20px;
    }
    .button {
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
}

    .button3 {border-radius: 8px;}

    
body {
  background: -webkit-linear-gradient(left, #FFF 20px, transparent 1%) center, -webkit-linear-gradient(#FFF 20px, transparent 1%) center, rgb(88, 88, 88);
  background: linear-gradient(90deg, #FFF 20px, transparent 1%) center, linear-gradient(#FFF 20px, transparent 1%) center, rgb(88, 88, 88);
  background-size: 22px 22px;
}
</style>
<title>History</title>
<div class="container align-center">
    
    <div class="row justify-content-center "style="background-color: #FFF;">
        <h1>Movie Recommendation history</h1>
    </div>
    <div class="vertical-center-row">
     <div class="row justify-content-center">
         <div class="col-5">
            <div class="row justify-content-center">
                <ul>
                    {{#each history}}
                        <div class="card col justify-content-center">
                        <div class="card-body">
                            <h5 class="card-text">{{this.name}}</h5>
                        </div>
                        </div>
                        {{!-- {{this.name}}
                        {{name}} --}}
                    {{/each}}
                    
                </ul>
            </div>
        </div>

</div>
